{
  "name": "vlightbox",
  "version": "3.0.1",
  "description": "Native Vue.js lightbox",
  "author": "Olivertaylor <olivertaylor18@hotmail.co.uk>",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/types/index.d.ts",
  "scripts": {
    "start": "webpack serve --config docs/webpack.config.js",
    "build": "rm -rf dist && npm run build:types && NODE_ENV=production webpack",
    "build:types": "vue-tsc --declaration --emitDeclarationOnly",
    "build:docs": "webpack --config docs/webpack.config.js --mode production",
    "lint": "eslint --ext .js,.ts,.vue --fix src __tests__; exit 0",
    "prepublishOnly": "npm run test && npm run build",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/olitaylor/vlightbox.git"
  },
  "keywords": [
    "lightbox",
    "vlightbox",
    "vue",
    "vue2",
    "Oliver Taylor"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/olitaylor/vlightbox/issues"
  },
  "homepage": "https://github.com/olitaylor/vlightbox",
  "peerDependencies": {
    "vue": "^2.7.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.6",
    "@babel/plugin-transform-runtime": "^7.23.6",
    "@babel/preset-env": "^7.23.6",
    "@babel/preset-typescript": "^7.23.6",
    "@babel/runtime": "^7.23.6",
    "@types/jest": "^29.5.11",
    "@vue/test-utils": "^1.3.6",
    "@vue/vue2-jest": "^29.2.6",
    "babel-loader": "^9.1.3",
    "css-loader": "^6.8.1",
    "eslint": "^8.56.0",
    "eslint-plugin-vue": "^9.19.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "sass": "^1.69.5",
    "sass-loader": "^13.3.3",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "vue": "^2.7.16",
    "vue-loader": "^15.11.1",
    "vue-style-loader": "^4.1.3",
    "vue-template-compiler": "^2.7.16",
    "vue-tsc": "^3.2.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.2.1",
    "webpack-merge": "^5.10.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "testRegex": "test.js$",
    "moduleFileExtensions": [
      "js",
      "ts",
      "vue"
    ],
    "transform": {
      "^.+\\.(js|ts)$": "babel-jest",
      ".*\\.(vue)$": "@vue/vue2-jest"
    },
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(@vue)/)"
    ]
  }
}